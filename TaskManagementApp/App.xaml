<Application x:Class="TaskManagementApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TaskManagementApp">
    <Application.Resources>
        <ResourceDictionary>

            <SolidColorBrush x:Key="ButtonDisabledBg" Color="#77777a" />
            <SolidColorBrush x:Key="ButtonBg" Color="#7376BD" />
            <SolidColorBrush x:Key="LightBorders" Color="#DDE6ED" />

            <SolidColorBrush x:Key="DarkText" Color="Black" />
            <SolidColorBrush x:Key="LightText" Color="#DDE6ED" />

            <SolidColorBrush x:Key="DataGridSolidColorBrush_1" Color="#F3F2F3 " />
            <SolidColorBrush x:Key="DataGridSolidColorBrush_2" Color="#77777a " />
            <SolidColorBrush x:Key="DataGridSolidColorBrush_3" Color="#FFFFFF " />

            <SolidColorBrush x:Key="ErrorMessageColor" Color="Red" />
            <SolidColorBrush x:Key="SuccessMessageColor" Color="#FFFFFF" />

            <Color x:Key="BgColor1">#210F55</Color>
            <Color x:Key="BgColor2">#24105F</Color>
            <Color x:Key="BgColor3">#FFFFFF</Color>

            <Color x:Key="SelectedTaskBg">#7376BD</Color>
            <Color x:Key="_DarkText">Black</Color>
            <Color x:Key="_LightText">#DDE6ED</Color> 

        </ResourceDictionary>
    </Application.Resources>
</Application>
